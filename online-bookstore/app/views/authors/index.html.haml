%p#notice= notice
%h1 Authors
= link_to 'New Author', new_author_path, class: "btn btn-default pull-right"
%table.table.table-bordered.table-hover
  %thead
    %tr
      %th Author name
      %th{:colspan => "3"}
  %tbody
    .text-center
      = will_paginate
    - @authors.each do |author|
      %tr
        %td= author.Author_name
        %td= link_to 'Show', author
        -if current_user.isManager
          %td= link_to 'Edit', edit_author_path(author)
          %td= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' }
%br/
.text-center
  = will_paginate

