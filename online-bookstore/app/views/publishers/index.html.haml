%p#notice= notice
%h1 Publishers
= link_to 'New Publisher', new_publisher_path, class: "btn btn-default pull-right"
%table.table.table-bordered.table-hover
  %thead
    %tr
      %th Name
      %th Address
      %th Telephone
      %th{:colspan => "3"}
  %tbody
    .text-center
      = will_paginate
    - @publishers.each do |publisher|
      %tr
        %td= publisher.Name
        %td= publisher.address
        %td= publisher.telephone
        %td= link_to 'Show', publisher
        -if current_user.isManager
          %td= link_to 'Edit', edit_publisher_path(publisher)
          %td= link_to 'Destroy', publisher, method: :delete, data: { confirm: 'Are you sure?' }
%br/
.text-center
  = will_paginate
