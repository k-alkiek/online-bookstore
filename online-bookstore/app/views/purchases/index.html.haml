%p#notice= notice
%h1 Purchases
= link_to 'New Purchase', new_purchase_path, class: "btn btn-default pull-right"
%table.table.table-bordered.table-hover
  %thead
    %tr
      %th User
      %th Book isbn
      %th No of copies
      %th Price
      %th Date of purchase
      %th{:colspan => "3"}
  %tbody
    .text-center
      = will_paginate
    - @purchases.each do |purchase|
      %tr
        %td= purchase.User
        %td= purchase.BOOK_ISBN
        %td= purchase.No_of_copies
        %td= purchase.price
        %td= purchase.date_of_purchase
        %td= link_to 'Show', purchase
        %td= link_to 'Edit', edit_purchase_path(purchase)
        %td= link_to 'Destroy', purchase, method: :delete, data: { confirm: 'Are you sure?' }
%br/
.text-center
  = will_paginate

