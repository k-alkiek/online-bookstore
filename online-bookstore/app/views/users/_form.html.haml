= form_with(model: user, local: true, class: 'form-horizontal') do |form|
  - if user.errors.any?
    #error_explanation
      %h2
        = pluralize(user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - user.errors.full_messages.each do |message|
          %li= message
  .form-group
    = form.label :email, class: "control-label col-sm-2"
    .col-sm-10
      = form.text_field :email, class: "form-control"
  .form-group
    = form.label :password, class: "control-label col-sm-2"
    .col-sm-10
      = form.text_field :password , :value =>"", class: "form-control"
  .form-group
    = form.label :first_name, class: "control-label col-sm-2"
    .col-sm-10
      = form.text_field :first_name, class: "form-control"
  .form-group
    = form.label :last_name, class: "control-label col-sm-2"
    .col-sm-10
      = form.text_field :last_name, class: "form-control"
  .form-group
    = form.label :phone, class: "control-label col-sm-2"
    .col-sm-10
      = form.text_field :phone, class: "form-control"
  .form-group
    = form.label :address, class: "control-label col-sm-2"
    .col-sm-10
      = form.text_field :address, class: "form-control"
  .actions
    %br
    = form.submit class: "btn btn-default col-sm-2 pull-right"
